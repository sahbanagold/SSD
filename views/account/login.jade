extends ../layout

block content
  .login-container.container
    .panel.col-md-8.col-md-offset-2
      .panel-body
        if messages.error
          .alert.alert-danger(role='alert')
            for error in messages.error
              div= error.msg

        form(method='POST')
          legend Log In
          .form-group
            label.control-label(for='email') Email
            input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus=true)
          .form-group
            label.control-label(for='password') Password
            input.form-control(type='password', name='password', id='password', placeholder='Password')
          .form-group
            a(href='/forgot')
              strong Forgot your password?
          button.btn.btn-success(type='submit') Log in

        .hr-title
          span or

        .btn-toolbar.text-center
          a.btn.btn-fb(href='/auth/facebook')
            i.fa.fa-facebook
          a.btn.btn-tw(href='/auth/twitter')
            i.fa.fa-twitter
          a.btn.btn-gplus(href='/auth/google')
            i.fa.fa-google-plus
          hr
          p.text-center Don't have an account?&nbsp;
            a(href='/signup')
              strong Sign up
